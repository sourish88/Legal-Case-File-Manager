[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    migrations,
    scripts/old_*
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by autoflake)
max-complexity = 12
per-file-ignores = 
    __init__.py:F401
    tests/*:F401,F811

[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    migrations,
    scripts/old_*
ignore =
    E203,
    E501,
    W503,
    F401
max-complexity = 12
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
    # Strategic ignores for migration.py: template formatting + specialized data transformation complexity
    app/views/migration.py:E221,E231,E272,E202,E241,E226,C901
